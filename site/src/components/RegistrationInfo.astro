<style>
  .registration-section {
    padding: 4rem 0;
    background: linear-gradient(135deg, rgba(27, 57, 106, 0.03), rgba(93, 133, 166, 0.03));
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .registration-content {
    max-width: 1000px;
    margin: 0 auto;
  }

  .info-message {
    background: white;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: var(--shadow-md);
    text-align: center;
    margin-bottom: 3rem;
    border-top: 5px solid var(--color-primary);
  }

  .icon-large {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .info-message h3 {
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .lead {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto;
  }

  .registration-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .reg-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: transform 0.3s ease;
  }

  .reg-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .reg-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .reg-card h4 {
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    font-size: 1.125rem;
  }

  .reg-card p {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text-light);
  }

  /* QR Section */
  .qr-section {
    background: white;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: var(--shadow-md);
    margin-bottom: 3rem;
  }

  .qr-section h3 {
    text-align: center;
    color: var(--color-primary);
    margin-bottom: 2rem;
  }

  .qr-container {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 3rem;
    align-items: center;
  }

  .qr-placeholder {
    background: white;
    padding: 1rem;
    border-radius: 12px;
    box-shadow: var(--shadow-md);
    border: 2px solid var(--color-border);
  }

  .qr-info {
    text-align: left;
  }

  .qr-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .qr-description {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
  }

  /* Contact Section */
  .contact-section {
    background: linear-gradient(135deg, rgba(27, 57, 106, 0.08), rgba(93, 133, 166, 0.08));
    padding: 2.5rem;
    border-radius: 12px;
    border-left: 5px solid var(--color-accent);
  }

  .contact-section h3 {
    text-align: center;
    color: var(--color-primary);
    margin-bottom: 2rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .contact-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
    box-shadow: var(--shadow-sm);
  }

  .contact-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .contact-card strong {
    display: block;
    color: var(--color-accent);
    margin-bottom: 0.5rem;
    font-size: 1.05rem;
  }

  .contact-card p {
    font-size: 0.9rem;
    color: var(--color-text-light);
  }

  @media (max-width: 768px) {
    .registration-section {
      padding: 2rem 0;
    }

    .info-message {
      padding: 2rem 1.5rem;
    }

    .qr-container {
      grid-template-columns: 1fr;
      text-align: center;
      justify-items: center;
    }

    .qr-info {
      text-align: center;
    }

    .qr-placeholder svg {
      width: 150px;
      height: 150px;
    }

    .registration-grid {
      grid-template-columns: 1fr;
    }

    .contact-section {
      padding: 1.5rem;
    }
  }
</style>
