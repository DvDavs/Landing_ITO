  // Program Tab Logic
  function initProgramTabs() {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');
    const switcher = document.querySelector('.tabs-switcher');

    if (!tabBtns.length || !switcher) return;

    tabBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const tabId = btn.getAttribute('data-tab');
        
        // Update switcher indicator position via class
        if (tabId === 'general') {
          switcher.classList.add('general-active');
        } else {
          switcher.classList.remove('general-active');
        }

        // Remove active from all
        tabBtns.forEach(b => b.classList.remove('active'));
        tabPanes.forEach(p => {
          p.classList.remove('active');
          // Brief delay to allow display: none to be applied correctly if needed, 
          // though CSS transition handles opacity
        });

        // Add active to current
        btn.classList.add('active');
        const activePane = document.getElementById(`${tabId}-program`);
        if (activePane) {
          activePane.classList.add('active');
        }
      });
    });
  }

  // Initialize on load and for Astro transitions if enabled
  document.addEventListener('DOMContentLoaded', initProgramTabs);
  document.addEventListener('astro:page-load', initProgramTabs);
</script>
